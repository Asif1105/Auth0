{
  "compilerOptions": {
    "rootDir": "./",
    "jsx": "preserve",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "packages",
    "paths": {
          "@shop/app/*": ["app/*"],
          "@shop/dls/*": ["dls/*"],
          "@shop/core/*": ["core/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "packages/core/__mocks__"
  ]
}